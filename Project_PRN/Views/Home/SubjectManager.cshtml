@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Project_PRN.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@model Subject

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Teacher</th>
            <th scope="col">Image</th>
            <th scope="col">Detail</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["slist"] as List<Subject>)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.TeacherId</td>
                <td>@item.Image</td>
                <td>
                    <a type="button" class="btn btn-info"
                   asp-controller="Home" asp-action="TransmissionSubject" asp-route-id="@item.Id" asp-route-type="1">
                        Detail
                    </a>
                </td>
                <td>
                    <a type="button" class="btn btn-info"
                   asp-controller="Home" asp-action="TransmissionSubject" asp-route-id="@item.Id">
                        Update
                    </a>
                </td>
                <td>
                    <a type="button" class="btn btn-warning"
                   asp-controller="Home" asp-action="DeleteSubject" asp-route-id="@item.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="display:table;width:100%;">
    <button type="button" class="btn btn-primary" id="btn">Form</button>
    <form asp-controller="Home" asp-action="InsertSubject" method="get" id="form1" style="display:none;">
        <div class="form-group">
            <label for="ID">SubjectID:</label>
            <input type="text" class="form-control" id="ID" asp-for="Id" value="" required />
        </div>
        <div class="form-group">
            <label for="name">Subject Name:</label>
            <input type="text" class="form-control" id="name" asp-for="Name" value="" required>
        </div>
        <div class="form-group">
            <label for="teacher">Teacher:</label>
            <input type="text" class="form-control" id="teacher" asp-for="TeacherId" value="" >
        </div>
        <div class="form-group">
            <label for="image">Image:</label>
            <input type="text" class="form-control" id="image" asp-for="Image" value="">
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Insert</button>

    </form>
</div>


<script>
    const btn = document.getElementById('btn');
    btn.addEventListener('click', () => {
        const form = document.getElementById('form1');
        if (form.style.display === 'none') {
            // 👇️ this SHOWS the form
            form.style.display = 'block';
        } else {
            // 👇️ this HIDES the form
            form.style.display = 'none';
        }
    });
</script>